extends layout

block content
 .container
    h1 Customer Home
    p Welcome to the customer area
        if errors
            each error, i in errors
                div.alert.alert-danger #{error.msg}
     div
        h2 Find Events
        form(method ='post', action='/users/search')
            .form-group
            label SEARCH TERMS
            input.form-control(name='keyword',type='text',placeholder='Enter username')
            .form-group
            input.btn.btn-primary(type = 'submit', name = 'submit',value='SEARCH!')

     div
         h2 All Events
            h4
                ul(id = 'showlist').-list-ul.h4


        button.btn.btn-primary(onclick ='retrieve()') SHOW ALL

        script.
                    var retrieve = function () {
                        $.get('/users/allEvents', function (data, status) {
                            $('#showlist').append(data);
                        });

                    }


     .container
